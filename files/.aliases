# shellcheck disable=SC2148

alias bcp="brew cleanup --prune=all"
alias ber="bundle exec rspec"
alias bera="bundle exec rubocop -A"
alias berd="bundle exec rubocop -D"
alias berdd="git ls-files -m --others --exclude-standard | xargs ls -1 2>/dev/null | grep '\.rb$' | xargs bundle exec rubocop -D"
alias berm="git ls-files --modified --others spec/**/*_spec.rb | xargs -o bundle exec rspec"
alias beru="git ls-files -m --others --exclude-standard | xargs ls -1 2>/dev/null | grep '\.rb$' | xargs bundle exec rubocop -A"
alias bu="bundle update"
alias c="cursor ."
alias cco="code ."
# alias cat='bat --paging=never' # cat with syntax highlighting
alias clear_swap="rm -rf ~/.local/state/nvim/swap/*.*"
alias dc="docker-compose"
alias ducks="find . -maxdepth 1 -not -name '.' -print0 | xargs -0 du -ckhs | sort -hr"
# alias ducks="du -ckhs ./* | sort -hr"
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"
alias gbb="git branch | grep -v '^\*' | fzf --height=20% --reverse --info=inline | xargs git checkout"
alias gcupdate="git commit -am '(chore) updates'"
alias gdd="git branch | grep -v '^\*' | fzf --height=20% --reverse --info=inline | xargs git branch -D"
alias gdnav="git diff | diffnav"
alias gg="lazygit"
alias hla="haml-lint -A"
alias ll="command ll -1"
alias merge_main="git fetch origin && git merge origin/main"
alias merge_master="git fetch origin && git merge origin/master"
alias oc="overmind c"
alias okta="bw get password okta | pbcopy"
alias rebase_main="git fetch origin && git rebase origin/main"
alias rebase_master="git fetch origin && git rebase origin/master"
alias sp="spotify"
alias t="bundle exec rake test"
alias tfaa="terraform apply -auto-approve"
alias tfda="terraform destroy -auto-approve"
alias tg="topgrade"
alias zshconfig="code ~/.zshrc"

alias rubocop_on_changes="git diff --name-only --diff-filter=AM origin/master...HEAD | grep -E '\.rb$|(^|/)Gemfile$' | xargs bin/rubocop -D --force-exclusion"
alias rubocop_fixall_on_changes="git diff --name-only --diff-filter=AM origin/master...HEAD | grep -E '\.rb$|(^|/)Gemfile$' | xargs bin/rubocop -A"
alias rubocop_fix_on_changes="git diff --name-only --diff-filter=AM origin/master...HEAD | grep -E '\.rb$|(^|/)Gemfile$' | xargs bin/rubocop -a"
alias rspec_on_changes="git diff --name-only --diff-filter=AM origin/master...HEAD | grep -E 'spec/.*_spec.rb$' | xargs bin/rspec"
